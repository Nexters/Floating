<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="102dp"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/item_effect_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:background="@drawable/slot_white" />

    <ImageView
        android:id="@+id/item_effect_image_option"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/select_selector" />

    <TextView
        android:id="@+id/item_effect_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_effect_image"
        android:layout_alignRight="@+id/item_effect_image"
        android:layout_below="@+id/item_effect_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9.5dp"
        android:gravity="center"
        android:text="테스트다"
        android:textColor="#464646"
        android:textSize="16sp" />

</RelativeLayout>